{{notes}}
{{#each notes}}
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Modifica la Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit/{{_id}}" method="POST">
                <div class="row mb-2">
                    
                    <input type="text" name="titulo"  class="form-control" autofocus  value="{{titulo }}">
                </div>
                <div class="row mb-2">
                    <textarea name="descripcion" class="form-control" placeholder="DescripciÃ³n" >{{ descripcion }}</textarea>
                </div>
                <div class="row mb-2">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{/each}}